{
    "name": "watttheref",
    "version": "0.1.0",
    "description": "WattTheRef is a Telegram bot that helps chat groups provide lotery style ref links from users",
    "main": "dist/src/index.js",
    "scripts": {
        "bundle": "rimraf dist && esbuild --outdir=dist --sourcemap --bundle --platform=node --target=node22.11.0 ./src/index.ts",
        "compile": "rimraf dist && esbuild --outdir=dist --bundle --platform=node --target=node22.11.0 ./src/index.ts",
        "dev": "node --enable-source-maps ./dist/index.js",
        "start": "node ./dist/index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/slaapyhoofd/WattTheRef.git"
    },
    "keywords": [
        "nodejs",
        "typescript",
        "lowdb",
        "telegraf"
    ],
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/slaapyhoofd/WattTheRef/issues"
    },
    "homepage": "https://github.com/slaapyhoofd/WattTheRef#readme",
    "dependencies": {
        "@types/node": "^25.0.10",
        "dotenv": "^17.2.3",
        "lowdb": "^7.0.1",
        "telegraf": "^4.16.3",
        "typescript": "^5.9.3"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.5",
        "esbuild": "^0.27.2",
        "prettier": "^3.8.1",
        "rimraf": "^6.1.2"
    }
}
